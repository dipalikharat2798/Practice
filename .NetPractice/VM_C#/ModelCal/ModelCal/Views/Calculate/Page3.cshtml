<script type="text/javascript">
    $(function () {
        alert("hi")
        $("#Add").click(function () {
            var a = $("#Num1").val()
            var b = $("#Num2").val()
            var result = parseInt(a) + parseInt(b)
            alert("hi")


            $("#Result").val(result);
        })


        $("#Subtract").click(function () {
            var a = $("#Num1").val()
            var b = $("#Num2").val()
            var result = parseInt(a) - parseInt(b)
            $("#Result").val(result);
        })


        $("#Multiply").click(function () {
            var a = $("#Num1").val()
            var b = $("#Num2").val()
            var result = parseInt(a) * parseInt(b)
            $("#Result").val(result);
        })


        $("#Divide").click(function () {
            var a = $("#Num1").val()
            var b = $("#Num2").val()
            var result = parseInt(a) / parseInt(b)
            $("#Result").val(result);
        })
    })


</script>








