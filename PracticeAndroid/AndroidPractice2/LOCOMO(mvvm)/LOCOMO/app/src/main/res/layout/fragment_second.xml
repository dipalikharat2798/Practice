<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SecondFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_layout"
        android:background="@color/lightblue"
        android:orientation="vertical">


        <Button
            android:id="@+id/daystart_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/lightblue1"
            android:text="Day Started"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/lightpink"
            android:text="Check Out"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="SELECT REASON"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <Button
            android:id="@+id/meal_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:background="@color/blue"
            android:text="Meal"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/endOfDay_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:background="@color/blue"
            android:text="End Of Day"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/extendedBreak_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:background="@color/blue"
            android:text="Extended Break"
            android:textColor="@color/white"
            android:textSize="25dp" />
    </LinearLayout>

</LinearLayout>